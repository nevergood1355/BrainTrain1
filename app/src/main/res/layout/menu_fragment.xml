<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#abcdf5"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Запоминай"
        android:textSize="32sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/menu1"
            style="@style/button"
            android:text="Спринт" />

        <TextView
            android:id="@+id/menu2"
            style="@style/button"
            android:text="Кручение" />

        <TextView
            android:id="@+id/menu3"
            style="@style/button"
            android:text="Следы" />

        <TextView
            android:id="@+id/menu4"
            style="@style/button"
            android:text="Статистика" />

        <TextView
            android:id="@+id/menu5"
            style="@style/button"
            android:text="Выход" />
    </LinearLayout>
</LinearLayout>